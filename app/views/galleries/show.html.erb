<div class="row text-center">
  <h1> <%= @gallery.name %></h1>
</div>
<div>
  <% if current_user %>
    <%= link_to "Add Photo", new_gallery_post_path(@gallery), class: "btn btn-success" %>
    <%= link_to "Edit Gallery", edit_gallery_path, class: "btn btn-warning" %>
    <%= link_to "Delete Gallery", @gallery, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
    <%= link_to "Share Gallery", shares_gallery_path(@gallery), class: "btn btn-info" %>
    <% end %>
</div>
<div class="container">
  <div class="row">
    <%= render @posts %>
  </div>
</div>
