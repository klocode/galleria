<div class="row text-center">
  <h1> <%= @gallery.name %></h1>
</div>
<div>
  <% if current_user %>
    <%= link_to "Add Photo", new_gallery_post_path(@gallery), class: "btn btn-default" %>
    <%= link_to "Edit Gallery", edit_gallery_path, class: "btn btn-default" %>
    <%= link_to "Delete Gallery", @gallery, method: :delete, class: "btn btn-default" %>
    <%= link_to "Share Gallery", shares_gallery_path(@gallery), class: "btn btn-default" %>
    <% end %>
</div>
<div class="container">
  <% @gallery.posts.each do |g| %>
  <div class="col-md-2">
    <div class="row">
      <%= link_to gallery_post_path(@gallery), class: "btn" do %>
        <%= image_tag g.photo.versions[:standard] %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
