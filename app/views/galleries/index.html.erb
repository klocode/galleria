<div class="container">
  <div class="jumbotron">
    <% if current_user %>
      <h1>Welcome <%= current_user.username %></h1>
    <% else %>
      <h1>A gallery that puts a world of possibilities at your fingertips. <i>Literally.</i></h1>
      <p><%= link_to "Sign In", signin_path, class: "btn btn-primary" %></a>
        <%= link_to "Sign Up!", new_user_path, class: "btn btn-primary" %></p>
      <% end %>
  </div>

  <div class="row">
    <% if current_user %>
      <h1 class="text-center">Your Galleries</h1>
      <% current_user.galleries.each do |g| %>
      <div class="row">
        <div class="media">
          <% if g.posts.any? %>
          <div class="media-left">
            <%= link_to g, target: :_blank do %>
              <%= image_tag g.posts.last.photo.versions[:thumbnail] %>
              <% end %>
            </div>
            <div class="media-body">
              <p><%= link_to g.name, g %></p>
              <p>Created by <%= g.user.username %> at: <%= g.created_at.strftime("%A %b. %e %Y %I:%M %p") %></p>
            </div>
          <% else %>
          <div class="media-body">
            <%= link_to g.name, g %>
            <p>Created at: <%= g.created_at.strftime("%A %b. %e %Y %I:%M %p") %></p>
          <% end %>
        </div>
    </div>
